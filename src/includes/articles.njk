{% macro articles(
    source,
    heading,
    limit,
    exclude
) %}
    {% for article in source | reverse %}
        {% if loop.index <= limit and article.url != exclude.url %}
            {% set external = article.data.source %}
            {% set video = article.data.video %}

            {% if external %}
                {% set articleUrl = article.data.source.url %}
                {% set outerLink %}
                    <p>
                        Read on {{ article.data.source.title }}
                    </p>
                {% endset %}
            {% else %}
                {% set articleUrl = article.url %}
            {% endif %}

            <article class="card">
                <p class="card__tags">
                    {% for tag in article.data.tags %}
                        <span class="card__tag">
                            {{ tag }}
                        </span>
                    {% endfor %}
                </p>

                <p class="card__types">
                    <span class="card__text">Text</span>
                    {% if video %}
                        <span class="card__video">Video</span>
                    {% endif %}
                    {% if external %}
                        <span class="card__external">External</span>
                    {% endif %}
                </p>

                <{{ heading }}} class="card__title">
                    <a class="card__link" href="{{ articleUrl }}">
                        {{- article.data.title -}}
                    </a>
                </{{ heading }}}>

                <time datetime="{{ article.date | dateISO }}">
                    {{ article.date | dateShort }}
                </time>

                <p class="content">
                    {{ article.data.desc | markdownInline | safe }}
                </p>

                {{ outerLink | safe }}
            </article>
        {% endif %}
    {% endfor %}
{% endmacro %}
