<footer class="footer">
    {% for section in footer %}
        <h4>{{ section.title }}</h4>
        <ul>
            {% for item in section.items %}
                <li>
                    {% if item.url %}
                        <a href="{{ item.url }}">
                            {{- item.title -}}
                        </a>
                    {% else %}
                        {{ item.title | markdownInline | safe }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endfor %}
</footer>
