<footer class="footer column">
    {% for section in footer %}
        <div class="footer__section">
            <strong class="footer__title">
                {{ section.title }}
            </strong>
            <ul class="footer__list">
                {% for item in section.items %}
                    <li class="footer__item">
                        {% if item.url %}
                            <a class="footer__link" href="{{ item.url }}">
                                {{- item.title | safe -}}
                            </a>
                        {% else %}
                            {{ item.title | safe }}
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</footer>
