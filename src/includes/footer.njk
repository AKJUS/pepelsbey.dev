<footer class="footer column">
    {% for section in footer %}
        <section class="footer__section">
            <h4 class="footer__title">{{ section.title }}</h4>
            <ul class="footer__list">
                {% for item in section.items %}
                    <li class="footer__item">
                        {% if item.url %}
                            <a class="footer__link" href="{{ item.url }}">
                                {{- item.title | safe -}}
                            </a>
                        {% else %}
                            {{ item.title | safe }}
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endfor %}
</footer>
