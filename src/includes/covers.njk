{% set name = 'index' if page.url == '/' else page.fileSlug %}

{% set path =
    global.domain + page.url + 'covers' if
    cover else
    global.domain + '/images/covers/' + name
%}

<meta property="og:type" content="website">
<meta property="og:title" content="{{ global.title }}">
<meta property="og:site_name" content="{{ global.subtitle }}">
<meta property="og:url" content="{{ global.domain }}">
<meta property="og:image" content="{{ path }}/wide.png">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:creator" content="@pepelsbey_dev">
<meta name="twitter:title" content="{{ global.title }}">
<meta name="twitter:description" content="{{ global.subtitle }}">
<meta name="twitter:site" content="{{ global.domain }}">
<meta name="twitter:image" content="{{ path }}/square.png">
