---
layout: page.njk
---

{% include 'header.njk' %}

<main>
    {{ content | safe }}

    <section>
        <h2>
            Articles
            <span>3</span>
        </h2>
        <a href="/blog/">
            View all
            <span>articles</span>
        </a>

        {% from 'posts.njk' import posts %}

        {{ posts(
            source=collections.blog,
            heading='h3',
            limit=5
        ) }}
    </section>

    <section>
        <h2>
            Projects
            <span>3</span>
        </h2>
        <a href="/projects/">
            View all
            <span>projects</span>
        </a>

        {% for section in projects %}
            <article>
                <h3>
                    <a href="/projects/#{{ section.title | lower }}">
                        {{ section.title }}
                    </a>
                </h3>
            </article>
        {% endfor %}
    </section>
</main>

{% include 'footer.njk' %}
