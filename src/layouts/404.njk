---
layout: page.njk
---

{% include 'header.njk' %}

<div class="main">
    <main>
        <header class="heading">
            <h1 class="heading__title">
                {{ title }}
            </h1>
        </header>
        <div class="content content-block content-inline">
            {{ content | safe }}
        </div>
    </main>
    <aside>
        <header class="heading">
            <h2 class="heading__title">
                Articles
            </h2>
            <span class="heading__number">
                {{ collections.articles.length }}
            </span>
            <a class="heading__link action" href="/articles/">
                <svg class="action__icon" width="24" height="24" aria-hidden="true">
                    <use href="/images/icons.svg#right"></use>
                </svg>
            </a>
        </header>

        {% from 'article-list.njk' import articleList with context %}

        {{ articleList(
            collection=collections.articles,
            limit=4
        ) }}
    </aside>
</div>

{% include 'footer.njk' %}
