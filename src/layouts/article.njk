---
layout: page.njk
---

{% include 'header.njk' %}

<div class="main">
    <div class="main__gaps">
        <main>
            <header class="main__lead lead">
                <h1 class="lead__title">
                    {{ title | safe }}
                </h1>
                <p class="lead__tags tags">
                    {% for tag in tags %}
                        <span class="tags__item">{{ tag }}</span>
                    {% endfor %}
                </p>
                <time class="lead__date" datetime="{{ date | dateISO }}">
                    {{ date | dateLong }}
                </time>
                <svg class="lead__scribble" width="200" height="200" aria-hidden="true">
                    <use href="/images/scribbles.svg#1"></use>
                </svg>
            </header>

            <div
                class="
                    main__wrapper
                    content
                    content-block
                    content-inline
                "
                id="article-content"
            >
                {{ content | safe }}
            </div>
        </main>
        <aside class="main__wrapper">
            <header class="heading">
                <h2 class="heading__title">
                    More
                </h2>
                <span class="heading__number">
                    {{ collections.articles.length }}
                </span>
                <a class="heading__link action action--hover" href="/articles/" aria-label="More articles">
                    <svg class="action__icon" width="24" height="24" aria-hidden="true">
                        <use href="/images/icons.svg#right"></use>
                    </svg>
                </a>
            </header>

            {% from 'article-card-list.njk' import articleCardList with context %}

            {{ articleCardList(
                collection=collections.articles,
                limit=5
            ) }}
        </aside>
    </div>
</div>

{% include 'footer.njk' %}
