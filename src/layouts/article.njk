---
layout: page.njk
---

{% include 'header.njk' %}

<div class="main">
    <main id="main">
        <header>
            <h1>
                {{ title }}
            </h1>
            <p>
                {% for tag in tags %}
                    {{ tag }}
                {% endfor %}
            </p>
            <p>
                <time datetime="{{ date | dateISO }}">
                    {{ date | dateLong }}
                </time>
            </p>
        </header>

        <div class="content">
            {{ content | safe }}
        </div>
    </main>

    <aside class="aside">
        <header class="caption">
            <h2 class="caption__title">
                More
            </h2>
            <span class="caption__number">
                4
            </span>
            <a class="caption__link action" href="/articles/">
                <svg class="action__icon" width="24" height="24" aria-hidden="true">
                    <use href="/images/icons.svg#right"></use>
                </svg>
            </a>
        </header>

        <div class="card-list">
            {% from 'card.njk' import card %}

            {% for article in collections.articles | reverse %}
                {% if loop.index <= 4 and article.url != page.url %}
                    {{ card(
                        article=article,
                        heading='h3'
                    ) }}
                {% endif %}
            {% endfor %}
        </div>
    </aside>
</div>

{% include 'footer.njk' %}
