---
layout: page.njk
---

{% include 'header.njk' %}

<div class="main">
    <main id="main">
        <header>
            <h1>
                {{ title }}
            </h1>
            <p>
                {% for tag in tags %}
                    {{ tag }}
                {% endfor %}
            </p>
            <p>
                <time datetime="{{ date | dateISO }}">
                    {{ date | dateLong }}
                </time>
            </p>
        </header>

        <div class="content">
            {{ content | safe }}
        </div>
    </main>

    {% from 'aside.njk' import aside with context %}

    {{ aside(
        title='More',
        number=4
    ) }}
</div>

{% include 'footer.njk' %}
