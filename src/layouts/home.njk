---
layout: page.njk
---

{% include 'header.njk' %}

<main class="main">
    <div class="intro">
        <p class="intro__hi">
            {{ intro.hi }}
        </p>
        <h1 class="intro__name">
            {{ intro.name }}
        </h1>
        <img
            class="intro__photo radius"
            src="{{ intro.photo }}"
            width="308" height="205"
            alt="{{ intro.alt }}"
        >
        <p class="intro__who">
            {{ intro.who }}
        </p>
        <p class="intro__what content content-inline">
            {{ intro.what | markdownInline | safe }}
        </p>
    </div>

    <section>
        <header class="heading">
            <h2 class="heading__title">
                Articles
            </h2>
            <span class="heading__number">
                {{ collections.articles.length }}
            </span>
            <a class="heading__link action" href="/articles/">
                <svg class="action__icon" width="24" height="24" aria-hidden="true">
                    <use href="/images/icons.svg#right"></use>
                </svg>
            </a>
        </header>

        {% from 'article-card-list.njk' import articleCardList with context %}

        {{ articleCardList(
            collection=collections.articles,
            limit=5
        ) }}
    </section>

    {% set projectsList = [] %}

    {% for section in projects %}
        {% for project in section.projects %}
            {% set projectsList = (
                projectsList.push(project),
                projectsList
            ) %}
        {% endfor %}
    {% endfor %}

    <section>
        <header class="heading">
            <h2 class="heading__title">
                Projects
            </h2>
            <span class="heading__number">
                {{ projectsList.length }}
            </span>
            <a class="heading__link action" href="/projects/">
                <svg class="action__icon" width="24" height="24" aria-hidden="true">
                    <use href="/images/icons.svg#right"></use>
                </svg>
            </a>
        </header>

        <div class="project-card-list">
            {% set scribbles = cycler(1, 2, 3) %}
            {% for section in projects %}
                <article class="project-card project-card--{{ section.title | lower }} radius">
                    <h3 class="project-card__title">
                        <a class="project-card__link" href="/projects/#{{ section.title | lower }}">
                            {{ section.title }}
                        </a>
                    </h3>
                    <svg class="project-card__icon" width="36" height="36" aria-hidden="true">
                        <use href="/images/icons.svg#right"></use>
                    </svg>
                    <svg class="project-card__scribble" width="200" height="200" aria-hidden="true">
                        <use href="/images/scribbles.svg#{{ scribbles.next() }}"></use>
                    </svg>
                </article>
            {% endfor %}
        </div>
    </section>
</main>

{% include 'footer.njk' %}
