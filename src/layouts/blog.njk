---
eleventyComputed:
  title: '{% if pagination.pageNumber > 0 %}Page {{ pagination.pageNumber + 1 }}{% else %}{{ title }}{% endif %}'
permalink: 'blog/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html'
pagination:
  data: collections.blog
  size: 5
  reverse: true
layout: page.njk
---

{% include 'header.njk' %}

<main>
    <h1>
        {{ title }}
    </h1>

    {{ content | safe }}

    {% from 'posts.njk' import posts %}

    {{ posts(
        source=collections.blog,
        heading='h2',
        limit=5
    ) }}

    {% include 'pages.njk' %}
</main>

{% include 'footer.njk' %}
