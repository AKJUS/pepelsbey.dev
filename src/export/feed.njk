---
permalink: /feed/index.xml
---
<?xml version="1.0" encoding="utf-8"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
    <channel>
        <title>{{ data.title }}</title>
        <description>{{ data.description }}</description>
        <copyright>{{ data.copyright }}</copyright>
        <language>{{ data.language }}</language>
        <link>{{ data.domain }}/</link>

        {% set lastArticle = collections.blog | last %}
        <lastBuildDate>{{ lastArticle.date.toUTCString() }}</lastBuildDate>

        <atom:link href="{{ data.domain }}/feed/" rel="self" type="application/rss+xml"/>

        {%- for post in collections.blog | reverse  %}
            <item>
                <title>{{ post.data.title }}</title>
                <link>{{ data.domain }}{{ post.url }}</link>
                <description>
                    <![CDATA[{{ post | absolute | trim | safe }}]]>
                </description>
                <pubDate>{{ post.date.toUTCString() }}</pubDate>
                <guid>{{ data.domain }}{{ post.url }}</guid>
            </item>
        {%- endfor %}
    </channel>
</rss>
