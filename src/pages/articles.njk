---
eleventyComputed:
    title: 'Articles{% if pagination.pageNumber > 0 %}, page {{ pagination.pageNumber + 1 }}{% endif %}'
pagination:
    data: collections.articles
    size: 5
    reverse: true
layout: page.njk
permalink: 'articles/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html'
---

{% include 'header.njk' %}

<main class="main" id="main">
    <header class="caption">
        <h2 class="caption__title">
            Articles
        </h2>
        <span class="caption__number">
            {{ collections.articles.length }}
        </span>
        <a class="caption__link action" href="/feed/" aria-label="RSS">
            <svg class="action__icon" width="24" height="24" aria-hidden="true">
                <use href="/images/icons.svg#rss">
            </svg>
        </a>
    </header>

    <div class="card-list">
        {% from 'card.njk' import card %}

        {% for article in pagination.items %}
            {{ card(
                article=article,
                heading='h2'
            ) }}
        {% endfor %}
    </div>

    {% include 'pagination.njk' %}
</main>

{% include 'footer.njk' %}
