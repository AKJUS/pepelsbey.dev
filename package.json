{
  "private": true,
  "scripts": {
    "start": "eleventy --serve --quiet",
    "build": "rm -rf dist && eleventy",
    "deploy": "cd dist && rsync --archive --compress --delete --exclude=.DS_Store . pepelsbey.dev:/var/www/pepelsbey.dev/html/",
    "lint:html": "node-w3c-validator --input ./dist/**/*.html --format lint --verbose --errors-only",
    "lint:css": "stylelint src/styles/**/*.css"
  },
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "nodeW3Cvalidator": {
    "suppressErrors": [
      "Attribute “media” not allowed on element “meta” at this point."
    ]
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.15",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "@sindresorhus/slugify": "^2.1.0",
    "autoprefixer": "^10.4.11",
    "esbuild": "^0.15.8",
    "focus-trap": "^7.0.0",
    "html-minifier": "^4.0.0",
    "js-yaml": "^4.1.0",
    "linkedom": "^0.14.14",
    "node-w3c-validator": "^2.0.2",
    "postcss": "^8.4.16",
    "postcss-csso": "^6.0.1",
    "postcss-import": "^15.0.0",
    "postcss-media-minmax": "^5.0.0",
    "pretty-data": "^0.40.0",
    "stylelint": "^14.12.0",
    "stylelint-order": "^5.0.0"
  }
}
